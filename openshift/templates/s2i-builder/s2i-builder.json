{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "s2i-builder",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/bcgov/angular-scaffold"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
                "kind": "ImageStreamTag",
                "name": "${ANGULAR_BUILDER_IMAGE}:latest"
            },
            "runtimeImage": {
              "kind": "ImageStreamTag",
              "name": "${NGINX_RUNTIME_IMAGE}:latest"
            },
            "runtimeArtifacts": [{
              "sourcePath": "/tmp/src",
              "destinationDir": "/tmp/"
            }]
          }


        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "resources": {},
        "postCommit": {}
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the frontend objects defined in this template.",
      "required": true,
      "value": "cap-eagle-public"
    },
    {
      "name": "ANGULAR_BUILDER_IMAGE",
      "displayName": "Angular Builder Image",
      "description": "The image that we compiled our code in.",
      "required": true,
      "value": "cap-eagle-public-builder"
    },
    {
      "name": "NGINX_RUNTIME_IMAGE",
      "displayName": "NGINX Runtime Image",
      "description": "The NGINX image with our settings applied to.",
      "required": true,
      "value": "cap-eagle-public-nginx-runtime"
    }
  ]
}
