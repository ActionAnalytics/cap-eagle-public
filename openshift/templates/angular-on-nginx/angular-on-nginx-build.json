{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "cap-eagle-public-angular-scaffold",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-build",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "runPolicy": "Serial",
        "completionDeadlineSeconds": 1800,
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ImageChange",
            "imageChange": {
              "from": {
                "kind": "ImageStreamTag",
                "name": "${NGINX_RUNTIME_IMAGE}:latest"
              }
            }
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_SOURCE_URL}"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
                "kind": "ImageStreamTag",
                "name": "${ANGULAR_BUILDER_IMAGE}:latest"
            },
            "runtimeImage": {
              "kind": "ImageStreamTag",
              "name": "${NGINX_RUNTIME_IMAGE}:latest"
            },
            "runtimeArtifacts": [{
              "sourcePath": "/opt/app-root/src/dist/",
              "destinationDir": "tmp/app"
            }]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "resources": {
          "requests": {
            "cpu": "100m",
            "memory": "2Gi"
          },
          "limits": {
            "cpu": "1",
            "memory": "4Gi"
          }
        }
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.",
      "required": true,
      "value": "cap-eagle-public-angular-scaffold"
    },
    {
      "name": "ANGULAR_BUILDER_IMAGE",
      "displayName": "Angular Builder Image",
      "description": "The image that we compiled our code in.",
      "required": true,
      "value": "cap-eagle-public-builder"
    },
    {
      "name": "NGINX_RUNTIME_IMAGE",
      "displayName": "NGINX Runtime Image",
      "description": "The NGINX image with our settings applied to.",
      "required": true,
      "value": "cap-eagle-public-nginx-runtime"
    },
    {
      "name": "GIT_SOURCE_URL",
      "displayName": "GIT Source Repo URL",
      "description": "A GIT URL to your source code.",
      "required": true,
      "value": "https://github.com/bcgov/cap-eagle-public"
    }
  ]
}
